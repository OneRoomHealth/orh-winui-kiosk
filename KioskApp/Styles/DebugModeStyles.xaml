<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Debug Mode UI Styles - VS Code / Windows Terminal Aesthetic
    ============================================================

    Color Palette:
    - Background Primary:   #1E1E1E (main content areas)
    - Background Secondary: #252526 (panels, toolbars)
    - Background Tertiary:  #2D2D2D (secondary toolbars)
    - Background Header:    #323233 (title bar)
    - Border:               #3C3C3C
    - Text Primary:         #CCCCCC
    - Text Secondary:       #858585
    - Text Muted:           #666666
    - Accent Blue:          #569CD6 (active tabs, highlights)
    - Status Bar Blue:      #007ACC (VS Code blue)

    Status Colors:
    - Healthy:              #4EC9B0 (teal/green)
    - Degraded/Warning:     #DCDCAA (yellow)
    - Error/Offline:        #F48771 (coral/red)
    - Disabled:             #858585 (gray)
    -->

    <!-- Color Brushes -->
    <SolidColorBrush x:Key="DebugBackgroundPrimaryBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DebugBackgroundSecondaryBrush" Color="#252526"/>
    <SolidColorBrush x:Key="DebugBackgroundTertiaryBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="DebugBackgroundHeaderBrush" Color="#323233"/>
    <SolidColorBrush x:Key="DebugBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="DebugTextPrimaryBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="DebugTextSecondaryBrush" Color="#858585"/>
    <SolidColorBrush x:Key="DebugTextMutedBrush" Color="#666666"/>
    <SolidColorBrush x:Key="DebugAccentBlueBrush" Color="#569CD6"/>
    <SolidColorBrush x:Key="DebugStatusBarBlueBrush" Color="#007ACC"/>

    <!-- Status Color Brushes -->
    <SolidColorBrush x:Key="DebugStatusHealthyBrush" Color="#4EC9B0"/>
    <SolidColorBrush x:Key="DebugStatusWarningBrush" Color="#DCDCAA"/>
    <SolidColorBrush x:Key="DebugStatusErrorBrush" Color="#F48771"/>
    <SolidColorBrush x:Key="DebugStatusDisabledBrush" Color="#858585"/>

    <!-- Toolbar Button Style -->
    <Style x:Key="DebugToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#3C3C3C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="28"/>
    </Style>

    <!-- Toolbar Button - Accent Variant -->
    <Style x:Key="DebugToolbarButtonAccentStyle" TargetType="Button" BasedOn="{StaticResource DebugToolbarButtonStyle}">
        <Setter Property="Foreground" Value="#4EC9B0"/>
    </Style>

    <!-- Toolbar Button - Warning Variant -->
    <Style x:Key="DebugToolbarButtonWarningStyle" TargetType="Button" BasedOn="{StaticResource DebugToolbarButtonStyle}">
        <Setter Property="Foreground" Value="#DCDCAA"/>
    </Style>

    <!-- Toolbar Button - Error Variant -->
    <Style x:Key="DebugToolbarButtonErrorStyle" TargetType="Button" BasedOn="{StaticResource DebugToolbarButtonStyle}">
        <Setter Property="Foreground" Value="#F48771"/>
    </Style>

    <!-- Tab Button Style (Inactive) -->
    <Style x:Key="DebugTabButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#858585"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- Tab Button Style (Active) -->
    <Style x:Key="DebugTabButtonActiveStyle" TargetType="Button">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="#569CD6"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- Health Card Style -->
    <Style x:Key="DebugHealthCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#252526"/>
        <Setter Property="BorderBrush" Value="#3C3C3C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="120"/>
    </Style>

    <!-- Health Card - Healthy Variant -->
    <Style x:Key="DebugHealthCardHealthyStyle" TargetType="Border" BasedOn="{StaticResource DebugHealthCardStyle}">
        <Setter Property="BorderBrush" Value="#4EC9B0"/>
        <Setter Property="BorderThickness" Value="1,1,1,3"/>
    </Style>

    <!-- Health Card - Warning Variant -->
    <Style x:Key="DebugHealthCardWarningStyle" TargetType="Border" BasedOn="{StaticResource DebugHealthCardStyle}">
        <Setter Property="BorderBrush" Value="#DCDCAA"/>
        <Setter Property="BorderThickness" Value="1,1,1,3"/>
    </Style>

    <!-- Health Card - Error Variant -->
    <Style x:Key="DebugHealthCardErrorStyle" TargetType="Border" BasedOn="{StaticResource DebugHealthCardStyle}">
        <Setter Property="BorderBrush" Value="#F48771"/>
        <Setter Property="BorderThickness" Value="1,1,1,3"/>
    </Style>

    <!-- Performance Card Style -->
    <Style x:Key="DebugPerformanceCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#3C3C3C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="MinHeight" Value="120"/>
    </Style>

    <!-- URL Bar Container Style -->
    <Style x:Key="DebugUrlBarContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#3C3C3C"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- ComboBox Dark Theme Style -->
    <Style x:Key="DebugComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#3C3C3C"/>
        <Setter Property="BorderBrush" Value="#3C3C3C"/>
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="PlaceholderForeground" Value="#858585"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="RequestedTheme" Value="Dark"/>
    </Style>

    <!-- TextBox Dark Theme Style -->
    <Style x:Key="DebugTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="PlaceholderForeground" Value="#858585"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="RequestedTheme" Value="Dark"/>
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="DebugSectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#858585"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CharacterSpacing" Value="50"/>
    </Style>

    <!-- Primary Text Style -->
    <Style x:Key="DebugTextPrimaryStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Secondary Text Style -->
    <Style x:Key="DebugTextSecondaryStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#858585"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <!-- Large Value Text Style -->
    <Style x:Key="DebugLargeValueStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4EC9B0"/>
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Log Entry Level Badge Styles -->
    <Style x:Key="DebugLogBadgeDebugStyle" TargetType="Border">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,2"/>
    </Style>

    <Style x:Key="DebugLogBadgeInfoStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E3A5F"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,2"/>
    </Style>

    <Style x:Key="DebugLogBadgeWarningStyle" TargetType="Border">
        <Setter Property="Background" Value="#3D3A1E"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,2"/>
    </Style>

    <Style x:Key="DebugLogBadgeErrorStyle" TargetType="Border">
        <Setter Property="Background" Value="#3D1E1E"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,2"/>
    </Style>

    <!-- Progress Bar Style -->
    <Style x:Key="DebugProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="#3C3C3C"/>
        <Setter Property="Foreground" Value="#4EC9B0"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="MinHeight" Value="4"/>
    </Style>

</ResourceDictionary>
