<Window
    x:Class="KioskApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <!-- Debug Navigation Panel (Hidden by default) -->
        <Grid x:Name="DebugPanel" 
              Height="80" 
              VerticalAlignment="Top" 
              Background="#2B2B2B"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <!-- URL Bar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="URL:" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="10,0,5,0"/>
                
                <TextBox x:Name="UrlTextBox" 
                         Grid.Column="1" 
                         Margin="5"
                         VerticalAlignment="Center"
                         KeyDown="UrlTextBox_KeyDown"/>
                
                <Button x:Name="GoButton"
                        Grid.Column="2" 
                        Content="Go" 
                        Width="50"
                        Margin="5"
                        Click="GoButton_Click"/>
            </Grid>
            
            <!-- Debug Tools -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Margin="10,0">
                <Button x:Name="BackButton" Content="← Back" Margin="2" Click="BackButton_Click"/>
                <Button x:Name="ForwardButton" Content="→ Forward" Margin="2" Click="ForwardButton_Click"/>
                <Button x:Name="RefreshButton" Content="⟳ Refresh" Margin="2" Click="RefreshButton_Click"/>
                <Button x:Name="DevToolsButton" Content="DevTools (F12)" Margin="2" Click="DevToolsButton_Click"/>
                <Button x:Name="CameraTestButton" Content="Camera Test" Margin="2" Click="CameraTestButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- WebView -->
        <controls:WebView2 x:Name="KioskWebView"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="0,0,0,0"
                  DefaultBackgroundColor="Transparent" />

        <!-- Status overlay shown during loading/errors -->
        <Border x:Name="StatusOverlay"
                Background="#80000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8">
                <TextBlock x:Name="StatusTitle"
                           Text="Loading kiosk..."
                           Foreground="White"
                           FontSize="20"
                           TextAlignment="Center"/>
                <TextBlock x:Name="StatusDetail"
                           Text=""
                           Foreground="White"
                           Opacity="0.8"
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           MaxWidth="800"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

