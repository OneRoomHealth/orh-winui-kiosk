<Window
    x:Class="KioskApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <!-- Debug Navigation Panel (Hidden by default) -->
        <Grid x:Name="DebugPanel" 
              Height="80" 
              VerticalAlignment="Top" 
              Background="#2B2B2B"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <!-- URL Bar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="URL:" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="10,0,5,0"/>
                
                <TextBox x:Name="UrlTextBox" 
                         Grid.Column="1" 
                         Margin="5"
                         VerticalAlignment="Center"
                         KeyDown="UrlTextBox_KeyDown"/>
                
                <Button x:Name="GoButton"
                        Grid.Column="2" 
                        Content="Go" 
                        Width="50"
                        Margin="5"
                        Click="GoButton_Click"/>
            </Grid>
            
            <!-- Debug Tools -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Margin="10,0">
                <Button x:Name="BackButton" Content="â† Back" Margin="2" Click="BackButton_Click"/>
                <Button x:Name="ForwardButton" Content="â†’ Forward" Margin="2" Click="ForwardButton_Click"/>
                <Button x:Name="RefreshButton" Content="âŸ³ Refresh" Margin="2" Click="RefreshButton_Click"/>
                <Button x:Name="DevToolsButton" Content="DevTools (F12)" Margin="2" Click="DevToolsButton_Click"/>
                <Button x:Name="CameraTestButton" Content="Camera Test" Margin="2" Click="CameraTestButton_Click"/>
                <Button x:Name="ViewLogsButton" Content="ðŸ“‹ View Logs" Margin="2" Click="ViewLogsButton_Click"/>
                <Button x:Name="SwitchMonitorButton" Content="ðŸ–¥ï¸ Switch Monitor" Margin="2" Click="SwitchMonitorButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Log Viewer Panel (Hidden by default, shown in debug mode) -->
        <Grid x:Name="LogViewerPanel"
              Background="#1E1E1E"
              Visibility="Collapsed"
              VerticalAlignment="Bottom"
              Height="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Log Viewer Header -->
            <Grid Grid.Row="0" Background="#2B2B2B" Padding="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Application Logs" 
                           Foreground="White" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                    <Button x:Name="ClearLogsButton" 
                            Content="Clear" 
                            Click="ClearLogsButton_Click"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button x:Name="CloseLogsButton" 
                            Content="Close" 
                            Click="CloseLogsButton_Click"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
            
            <!-- Log Content -->
            <ScrollViewer x:Name="LogScrollViewer"
                          Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogContentTextBlock"
                           FontFamily="Consolas"
                           FontSize="11"
                           Foreground="#D4D4D4"
                           TextWrapping="NoWrap"
                           IsTextSelectionEnabled="True"
                           Padding="10"/>
            </ScrollViewer>
            
            <!-- Log Footer -->
            <Grid Grid.Row="2" Background="#2B2B2B" Padding="10,5">
                <TextBlock x:Name="LogCountTextBlock"
                           Text="0 log entries"
                           Foreground="#888888"
                           FontSize="10"/>
            </Grid>
        </Grid>
        
        <!-- WebView -->
        <controls:WebView2 x:Name="KioskWebView"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="0,0,0,0"
                  DefaultBackgroundColor="Transparent" />

        <!-- Status overlay shown during loading/errors -->
        <Border x:Name="StatusOverlay"
                Background="#80000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8">
                <TextBlock x:Name="StatusTitle"
                           Text="Loading kiosk..."
                           Foreground="White"
                           FontSize="20"
                           TextAlignment="Center"/>
                <TextBlock x:Name="StatusDetail"
                           Text=""
                           Foreground="White"
                           Opacity="0.8"
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           MaxWidth="800"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

